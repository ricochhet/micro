{
    "name": "micro",
    "version": "1.0.0",
    "description": "small zero-dependency tools, frameworks and libraries that I used for personal projects.",
    "main": "",
    "scripts": {
        "checks": "ts-node ./src/micro.checks.ts && echo [micro-npm] done",
        "build": "tsc ./src/micro.mod.ts ./src/micro.checks.ts ./src/microsys.mod.ts --outDir dist --target es2022 && echo [micro-npm] done",
        "prettier": "prettier --config .prettierrc --write ./src/ && echo [micro-npm] done",
        "deploy": "npm run checks && npm run build && npm run prettier",
        "prettier:check": "prettier --config .prettierrc --check ./src/  && echo [micro-npm] done",
        "test": "ts-node ./__tests__/tests.ts  && echo [micro-npm] done"
    },
    "author": "ricochhet",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^18.15.11",
        "prettier": "^2.8.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
